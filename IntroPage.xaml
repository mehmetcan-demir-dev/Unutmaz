<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unutmaz.IntroPage"
             BackgroundColor="White">
    <Grid>
        <!-- Typewriter text container -->
        <StackLayout x:Name="TypingStack"
                     HorizontalOptions="Start"
                     VerticalOptions="Start"
                     Margin="20,260,20,0"
                     Spacing="8">

            <!-- First line of typewriter text -->
            <Label x:Name="Line1Label"
                   Text=""
                   FontSize="20"
                   HorizontalOptions="Start"
                   VerticalOptions="Start"
                   TextColor="Black" />

            <!-- Second line of typewriter text (with formatted text) -->
            <Label x:Name="Line2Label"
                   Text=""
                   FontSize="20"
                   HorizontalOptions="Start"
                   VerticalOptions="Start"
                   TextColor="Black" />
        </StackLayout>

        <!-- Start button (initially hidden) -->
        <Button x:Name="StartButton"
                Text="Başlayalım"
                Clicked="OnStartClicked"
                IsVisible="False"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                BackgroundColor="#512BD4"
                TextColor="White"
                FontSize="18"
                CornerRadius="25"
                WidthRequest="160"
                HeightRequest="50"/>
    </Grid>
</ContentPage>