<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unutmaz.MainPage"
             BackgroundColor="White">

    <Grid>

        <!-- Ana Menü Başlığı ve Kategoriler -->
        <StackLayout Padding="20" Spacing="10" x:Name="MainMenu">
            <Label Text="Hangi konularda yardımcı olmamı istersiniz?" 
                   TextColor="Black" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   HorizontalTextAlignment="Center"/>

            <Grid RowSpacing="15" ColumnSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Alışveriş Butonu -->
                <Frame BackgroundColor="#FF6F61" Grid.Row="0" Grid.Column="0" CornerRadius="20" HasShadow="False" HeightRequest="150" WidthRequest="150">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCategoryTapped" CommandParameter="Alisveris" />
                    </Frame.GestureRecognizers>
                    <Label Text="Alışveriş" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" FontAttributes="Bold"/>
                </Frame>

                <!-- Diğer kategori butonları -->
                <Frame BackgroundColor="#6B5B95" Grid.Row="0" Grid.Column="1" CornerRadius="20" HasShadow="False" HeightRequest="150" WidthRequest="150">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCategoryTapped" CommandParameter="Ibadet" />
                    </Frame.GestureRecognizers>
                    <Label Text="İbadet" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" FontAttributes="Bold"/>
                </Frame>

                <Frame BackgroundColor="#88B04B" Grid.Row="1" Grid.Column="0" CornerRadius="20" HasShadow="False" HeightRequest="150" WidthRequest="150">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCategoryTapped" CommandParameter="SaglikSpor" />
                    </Frame.GestureRecognizers>
                    <Label Text="Sağlık/Spor" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" FontAttributes="Bold"/>
                </Frame>

                <Frame BackgroundColor="#DBCBD8" Grid.Row="1" Grid.Column="1" CornerRadius="20" HasShadow="False" HeightRequest="150" WidthRequest="150">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCategoryTapped" CommandParameter="Hatirlatici" />
                    </Frame.GestureRecognizers>
                    <Label Text="Hatırlatıcı" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" FontAttributes="Bold"/>
                </Frame>

                <Frame BackgroundColor="#9AD4D6" Grid.Row="2" Grid.Column="0" CornerRadius="20" HasShadow="False" HeightRequest="150" WidthRequest="150">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCategoryTapped" CommandParameter="Planlama" />
                    </Frame.GestureRecognizers>
                    <Label Text="Planlama" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" FontAttributes="Bold"/>
                </Frame>

                <Frame BackgroundColor="#955251" Grid.Row="2" Grid.Column="1" CornerRadius="20" HasShadow="False" HeightRequest="150" WidthRequest="150">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCategoryTapped" CommandParameter="Finans" />
                    </Frame.GestureRecognizers>
                    <Label Text="Finans/Bütçe" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" FontAttributes="Bold"/>
                </Frame>

                <Frame BackgroundColor="#B565A7" Grid.Row="3" Grid.Column="0" CornerRadius="20" HasShadow="False" HeightRequest="150" WidthRequest="150">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCategoryTapped" CommandParameter="Seyahat" />
                    </Frame.GestureRecognizers>
                    <Label Text="Seyahat/Navigasyon" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" FontAttributes="Bold"/>
                </Frame>

                <Frame BackgroundColor="#009B77" Grid.Row="3" Grid.Column="1" CornerRadius="20" HasShadow="False" HeightRequest="150" WidthRequest="150">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCategoryTapped" CommandParameter="Egitim" />
                    </Frame.GestureRecognizers>
                    <Label Text="Eğitim/Öğrenme" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" FontAttributes="Bold"/>
                </Frame>

            </Grid>
        </StackLayout>

        <!-- Kategori Seçim Overlay -->
        <Grid x:Name="SelectionOverlay" IsVisible="False" BackgroundColor="#80000000">

            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" Padding="20">

                <Grid x:Name="PlusNextButtonGrid" IsVisible="False" Margin="0,-20,0,0" HorizontalOptions="Start" WidthRequest="130">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="45" />
                        <!-- Boşluk için sütun -->
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="PlusButton"
            Text="+"
            BackgroundColor="#FF9800"
            TextColor="White"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="25"
            FontSize="24"
            FontAttributes="Bold"
            Grid.Column="0"
            Clicked="OnPlusButtonClicked" />

                    <!-- Boşluk sütunu burada -->

                    <Button x:Name="NextButton"
            Text=">"
            BackgroundColor="#4CAF50"
            TextColor="White"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="25"
            FontSize="24"
            FontAttributes="Bold"
            Grid.Column="2"
            Clicked="OnNextButtonClicked" />
                </Grid>




                <!-- Kişisel ve Aile Butonları (üstte, + ve > butonlarının hemen altında) -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="40" Margin="0,0,0,10">

                    <StackLayout HorizontalOptions="Center">

                        <Button x:Name="KisiselButton"
                                Text="Kişisel"
                                BackgroundColor="#6B5B95"
                                TextColor="White"
                                WidthRequest="150"
                                HeightRequest="80"
                                CornerRadius="40"
                                FontSize="22"
                                FontAttributes="Bold"
                                Clicked="OnKisiselClicked"/>
                    </StackLayout>

                    <Button x:Name="AileButton"
                            Text="Aile"
                            BackgroundColor="#88B04B"
                            TextColor="White"
                            WidthRequest="150"
                            HeightRequest="80"
                            CornerRadius="40"
                            FontSize="22"
                            FontAttributes="Bold"
                            Clicked="OnAileClicked"/>

                </HorizontalStackLayout>

                <!-- Alışveriş Butonu büyüyerek ortada -->
                <Frame x:Name="AlisverisBigButton"
                       BackgroundColor="#FF6F61"
                       CornerRadius="25"
                       Padding="20,15"
                       HasShadow="True"
                       HorizontalOptions="Center"
                       Margin="10,0,10,10"
                       HeightRequest="75"
                       WidthRequest="200"
                       IsVisible="False">
                    <Label Text="Alışveriş" TextColor="White" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center"/>
                </Frame>

                <!-- Geri Dön Butonu -->
                <Button Text="← Geri Dön"
                        BackgroundColor="#607D8B"
                        TextColor="White"
                        WidthRequest="200"
                        HeightRequest="50"
                        CornerRadius="25"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Clicked="OnBackButtonClicked"/>

            </StackLayout>
        </Grid>

    </Grid>
</ContentPage>
