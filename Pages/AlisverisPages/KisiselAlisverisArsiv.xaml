            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
            <converters:AllCheckedToStrikethroughConverter x:Key="AllCheckedToStrikethroughConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- BaÅŸlÄ±k ve Temizle Butonu -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="ArÅŸiv Listeleri"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#333"
                   VerticalOptions="Center"
                   Grid.Column="0" />

            <Button Text="TÃ¼mÃ¼nÃ¼ Temizle"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    FontSize="14"
                    CornerRadius="8"
                    Padding="15,8"
                    Grid.Column="1"
                    Clicked="OnTumunuTemizleClicked" />
        </Grid>

        <!-- ArÅŸiv Listesi -->
        <CollectionView x:Name="ArsivCollectionView"
                        ItemsLayout="VerticalList"
                        SelectionMode="None"
                        Grid.Row="1">

            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="Center">
                    <Label Text="ðŸ“"
                           FontSize="60"
                           HorizontalOptions="Center"
                           TextColor="#CCC" />
                    <Label Text="ArÅŸivde henÃ¼z liste yok"
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="#999"
                           Margin="0,10,0,0" />
                    <Label Text="Tamamlanan listeleri arÅŸive gÃ¶nderebilirsiniz"
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="#AAA"
                           Margin="0,5,0,0" />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15"
                           Margin="5"
                           BackgroundColor="White"
                           CornerRadius="12"
                           HasShadow="True"
                           BorderColor="#E0E0E0"
                           Opacity="0.8">

                        <StackLayout Spacing="10">
                            <!-- Ãœst kÄ±sÄ±m: Mod etiketi, Liste baÅŸlÄ±ÄŸÄ±, tarih ve menÃ¼ -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Mod etiketi - Sol tarafta -->
                                <Frame BackgroundColor="{Binding Mod, Converter={StaticResource ModToColorConverter}}"
                                       WidthRequest="40"
                                       HeightRequest="40"
                                       CornerRadius="20"
                                       HasShadow="False"
                                       Padding="0"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center"
                                       Grid.Column="0"
                                       Margin="0,0,10,0">
                                    <Label Text="S"
                                           TextColor="White"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                </Frame>

                                <!-- Liste baÅŸlÄ±ÄŸÄ± ve tarih - Ortada -->
                                <StackLayout Grid.Column="1" VerticalOptions="Center">
                                    <Label Text="{Binding ListeBasligi}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#333"
                                           TextDecorations="Strikethrough">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnListeBasligTapped" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Label Text="{Binding ArsivelenmeTarihi, StringFormat='ArÅŸivlenme: {0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="12"
                                           TextColor="#999"
                                           Margin="0,2,0,0" />
                                </StackLayout>

                                <!-- MenÃ¼ ikonu - SaÄŸ tarafta -->
                                <Label Text="â‹®"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#666"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       Grid.Column="2">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnMenuTapped" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>

                            <!-- Alt kÄ±sÄ±m: AlÄ±ÅŸveriÅŸ maddelerinin listesi (AÃ§Ä±k/KapalÄ±) -->
                            <CollectionView ItemsSource="{Binding ListeOgeleri}"
                                            IsVisible="{Binding IsExpanded}"
                                            ItemsLayout="VerticalList"
                                            SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="5" ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Label Text="âœ“"
                                                   FontSize="16"
                                                   TextColor="#4CAF50"
                                                   VerticalOptions="Center"
                                                   Grid.Column="0" />

                                            <Label Text="{Binding ItemText}"
                                                   FontSize="14"
                                                   TextColor="#666"
                                                   VerticalOptions="Center"
                                                   TextDecorations="Strikethrough"
                                                   Grid.Column="1" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- AÃ§Ä±klama: Serbest ve Standart mod renk efsaneleri -->
        <Grid Padding="10,20,10,10"
              ColumnSpacing="10"
              RowSpacing="10"
              Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Serbest mod efsanesi -->
            <Frame BackgroundColor="Red"
                   CornerRadius="8"
                   Padding="10"
                   HasShadow="False"
                   Grid.Column="0">
                <Label Text="S : Serbest Mod"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontAttributes="Bold" />
            </Frame>

            <!-- Standart mod efsanesi -->
            <Frame BackgroundColor="SteelBlue"
                   CornerRadius="8"
                   Padding="10"
                   HasShadow="False"
                   Grid.Column="1">
                <Label Text="S : Standart Mod"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontAttributes="Bold" />
            </Frame>
        </Grid>

    </Grid>
</ContentPage>