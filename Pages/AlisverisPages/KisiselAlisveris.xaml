<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Unutmaz.Converters.AlisverisConverters"
             x:Class="Unutmaz.Pages.KisiselAlisveris"
             Title="Kişisel Alışveriş"
             BackgroundColor="#FAFAFA">
    <!-- Converter tanımları -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ColorfulDateConverter x:Key="ColorfulDateConverter" />
            <converters:ModToColorConverter x:Key="ModToColorConverter" />
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
            <converters:AllCheckedToStrikethroughConverter x:Key="AllCheckedToStrikethroughConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Ana Container - Tüm içeriği kapsayan Grid -->
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Başlık ve Arşiv Butonu -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="Alışveriş Listeleri"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#333"
                   VerticalOptions="Center"
                   Grid.Column="0" />

            <Button x:Name="BtnSiralama"
                    Text="↕️"
                    FontSize="18"
                    BackgroundColor="Transparent"
                    TextColor="#666"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    Grid.Column="1"
                    Clicked="BtnSiralama_Clicked" />

            <Button Text="Arşiv"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="14"
                    CornerRadius="8"
                    Padding="15,8"
                    Grid.Column="3"
                    Clicked="OnArsivButonuClicked" />
        </Grid>

        <!-- Liste -->
        <CollectionView x:Name="ListeCollectionView"
                        ItemsLayout="VerticalList"
                        SelectionMode="None"
                        Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15"
                           Margin="5"
                           BackgroundColor="White"
                           CornerRadius="12"
                           HasShadow="True"
                           BorderColor="#E0E0E0">
                        <StackLayout Spacing="10">
                            <!-- Üst kısım: Mod etiketi, Liste başlığı, tarih ve menü -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Mod etiketi -->
                                <Frame BackgroundColor="{Binding Mod, Converter={StaticResource ModToColorConverter}}"
                                       WidthRequest="40"
                                       HeightRequest="40"
                                       CornerRadius="20"
                                       HasShadow="False"
                                       Padding="0"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center"
                                       Grid.Column="0"
                                       Margin="0,0,10,0">
                                    <Label Text="S"
                                           TextColor="White"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                </Frame>

                                <!-- Liste Başlığı -->
                                <Label Text="{Binding ListeBasligi}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#333"
                                       VerticalOptions="Center"
                                       TextDecorations="{Binding ListeOgeleri, Converter={StaticResource AllCheckedToStrikethroughConverter}}"
                                       Grid.Column="1">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnListeBasligTapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                                <!-- Tarih Label (üç noktanın solunda) -->
                                <Label Text="{Binding OlusturulmaTarihi, StringFormat='{}{0:dd.MM.yyyy}'}"
                                       TextColor="{Binding OlusturulmaTarihi, Converter={StaticResource ColorfulDateConverter}}"
                                       FontSize="12"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       Margin="0,0,10,0"
                                       Grid.Column="2" />

                                <!-- Menü ⋮ -->
                                <Label Text="⋮"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#666"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       Grid.Column="3">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnMenuTapped" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>

                            <!-- Alışveriş maddeleri -->
                            <CollectionView ItemsSource="{Binding ListeOgeleri}"
                                            IsVisible="{Binding IsExpanded}"
                                            ItemsLayout="VerticalList"
                                            SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="5" ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <CheckBox IsChecked="{Binding IsChecked}"
                                                      Grid.Column="0"
                                                      VerticalOptions="Center" />
                                            <Label Text="{Binding ItemText}"
                                                   FontSize="14"
                                                   TextColor="#666"
                                                   VerticalOptions="Center"
                                                   Grid.Column="1">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnMaddeTapped" />
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Açıklama: Serbest ve Standart mod renk efsaneleri -->
        <Grid Padding="10,20,10,10"
              ColumnSpacing="10"
              RowSpacing="10"
              Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Serbest mod efsanesi -->
            <Frame BackgroundColor="Red"
                   CornerRadius="8"
                   Padding="10"
                   HasShadow="False"
                   Grid.Column="0">
                <Label Text="S : Serbest Mod"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontAttributes="Bold" />
            </Frame>

            <!-- Standart mod efsanesi -->
            <Frame BackgroundColor="SteelBlue"
                   CornerRadius="8"
                   Padding="10"
                   HasShadow="False"
                   Grid.Column="1">
                <Label Text="S : Standart Mod"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontAttributes="Bold" />
            </Frame>
        </Grid>

        <!-- Sıralama Popup - Sıralama butonunun sağ alt köşesinde -->
        <Frame x:Name="SiralamaPopup"
               IsVisible="False"
               BackgroundColor="White"
               HasShadow="True"
               CornerRadius="6"
               Padding="5"
               WidthRequest="120"
               HeightRequest="65"
               HorizontalOptions="Start"
               VerticalOptions="Start"
               Margin="185,-10,0,0"
               Grid.Row="0"
               Grid.RowSpan="3">
            <StackLayout Spacing="1">
                <Button Text="Tarihe Göre"
                        FontSize="12"
                        TextColor="#333"
                        BackgroundColor="Transparent"
                        HeightRequest="26"
                        Padding="5,0"
                        Clicked="TariheGoreSirala_Clicked" />
                <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="5,0" />
                <Button Text="Kayıt Sırasına Göre"
                        FontSize="12"
                        TextColor="#333"
                        BackgroundColor="Transparent"
                        HeightRequest="26"
                        Padding="5,0"
                        Clicked="KayitSirasinaGoreSirala_Clicked" />
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>